@font-face
  font-family Trajan
  src url('/static/fonts/GoudyTrajan-Regular.woff2') format('woff2'),
    url('/static/fonts/GoudyTrajan-Regular.woff') format('woff'),
    url('/static/fonts/GoudyTrajan-Regular.ttf') format('truetype')
  font-weight normal
  font-style normal

$font-size = 30px
$font-family = Trajan, sans-serif
$font = $font-size $font-family

$text-color = #2c3e50
$main-color = #4e5f9a5c
$btn-color = #6d8fd6
$gray-color = #73737385
